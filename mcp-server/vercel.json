{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/puppeteer/.local-chromium/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "src/server.ts"
    },
    {
      "src": "/unsubscribe",
      "dest": "src/server.ts"
    }
  ],
  "env": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium-browser"
  }
}
